<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:paddingTop="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:background="@drawable/thread_item_background"
        android:gravity="center"
        android:layout_height="wrap_content">

        <TextView
            android:text="This is a simple title"
            android:lineSpacingExtra="2dp"
            android:textColor="@color/black87"
            android:textSize="14sp"
            android:paddingBottom="5dp"
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:id="@+id/div"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider"
            android:layout_below="@+id/title" />

        <TextView
            android:id="@+id/preview_text"
            android:layout_below="@+id/div"
            android:text="This is just sample text of the program"
            android:maxLines="2"
            android:textSize="12sp"
            android:textColor="@color/black55"
            android:paddingTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/category"
            android:text="Category"
            android:layout_alignParentRight="true"
            android:textColor="@color/black87"
            android:layout_below="@+id/preview_text"
            android:paddingRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
</LinearLayout>