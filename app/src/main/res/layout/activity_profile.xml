<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/profile_bg"
        android:background="@drawable/profile_bg"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

    <com.makeramen.RoundedImageView
        android:id="@+id/profile_img"
        android:layout_marginTop="62dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/nophoto"
        android:layout_height="100dp"
        android:layout_width="100dp"
        app:corner_radius="100dp"
        app:border_width="3dp"
        app:border_color="#FFFFFF"
        />

    <TextView
        android:id="@+id/name"
        android:layout_below="@+id/profile_img"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:textColor="#FFFFFF"
        android:padding="10dp"
        android:text="Huteri Manza"
        android:layout_height="wrap_content" />

    <View
        android:id="@+id/div"
        android:layout_below="@+id/name"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider" />

    <TextView
        android:id="@+id/about_me_title"
        android:layout_below="@+id/div"
        android:text="About Me"
        android:padding="10dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/about_me_text"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/about_me_title"
        android:layout_centerHorizontal="true"
        android:text="I'm simple guy who love travelling and love to try something out" />

    <View
        android:id="@+id/div2"
        android:layout_below="@+id/about_me_text"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider" />
</RelativeLayout>
