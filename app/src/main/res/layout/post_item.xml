<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#FFFFFF"
    android:padding="5dp"
    android:layout_height="wrap_content">

    <com.makeramen.RoundedImageView
        android:id="@+id/profile_img"
        android:layout_alignParentLeft="true"
        android:src="@drawable/nophoto"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:corner_radius="50dp"
        app:oval="false" />

    <TextView
        android:id="@+id/name"
        android:layout_toRightOf="@+id/profile_img"
        android:text="huteri"
        android:layout_alignTop="@+id/profile_img"
        android:layout_width="wrap_content"
        android:textColor="@color/accent_color"
        android:paddingTop="5dp"
        android:paddingLeft="5dp"
        android:textSize="14sp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/date"
        android:layout_alignParentRight="true"
        android:text="Oct 20, 2014 20:10:20"
        android:layout_alignTop="@+id/name"
        android:textSize="12sp"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:textColor="#50000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:layout_below="@+id/profile_img"
        android:id="@+id/div"
        android:layout_width="match_parent"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="5dp"
        android:layout_height="1dp"
        android:background="@color/divider" />

    <TextView
        android:id="@+id/text"
        android:textColor="#87000000"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@+id/div"
        android:text="This is a collection of test. Let's make it a really long one. This is a collection of test. Let's make it a really long one.This is a collection of test. Let's make it a really long one."
        android:padding="10dp"
        android:lineSpacingExtra="4dp"
        android:textSize="14sp" />


</RelativeLayout>